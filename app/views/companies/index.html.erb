<!DOCTYPE HTML>
<html>
  <head>
    <title>Job Tracker Companies</title>
  </head>
  <body>
    <section class="hero is-primary is-small">
      <div class="hero-body">
        <div class="container">
          <h1 class="title is-1">
            All Companies
          </h1>
          <h2 class="subtitle">
            <%= button_to "Add a New Company", new_company_path, method: "get", class: "button is-success" %>
          </h2>
        </div>
      </div>
    </section>
    <% @companies.each do |company| %>
      <div class="card company<%= company.id %>">
          <div class="card-content">
            <h2 class="name"><%= link_to company.name, company_path(company) %></h2>
          </div>
          <footer class="card-footer">
              <span class="card-footer-item">
                  <p><%= button_to "Edit", edit_company_path(company), method: "get", class: "button is-success" %></p>
              </span>
              <span class="card-footer-item">
                <p><%= button_to "Delete", company_path(company), method: "delete", class: "button is-danger" %></p>
              </span>
          </footer>
      </div>
    <% end %>
    </body>
    </html>
