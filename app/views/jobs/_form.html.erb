<%= form_for [@job] do |f| %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories,:id,:name, include_blank: "(choose)"%>

  <%= f.label :role %>
  <%= f.text_field :title %>

  <%= f.label :company %>
  <%= f.collection_select :company_id, @companies.order(:name),:id,:name, include_blank: "(choose)"%>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>

  <%= f.select :level_of_interest, [1, 2, 3, 4, 5]%>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
