<%= form_for [@job] do |f| %>

<div class='tile is-ancestor'>
  <div class='is-12 is-verticle tile is-parent field'>
    <div class='tile is-child box title is-3 control'>
      <%= f.label :category %>
      <%= f.collection_select(:category_id, @categories, :id, :name, include_blank: '(choose)')%>
      </br>
      </br>
      <%= f.label :role %>
      <%= f.text_field :title %>
      </br>
      </br>
      <%= f.label :company %>
      <%= f.collection_select :company_id, @companies.order(:name),:id,:name, include_blank: '(choose)'%>
      </br>
      </br>
      <%= f.label :description %>
      <%= f.text_field :description %>
      </br>
      </br>
      <%= f.label :level_of_interest %>
      <%= f.select :level_of_interest, [1, 2, 3, 4, 5] %>
      </br>
      </br>
      <%= f.label :city %>
      <%= f.text_field :city %>
      </br>
      </br>
      <%= f.submit 'Save' %>
    </div>
  </div>
</div>
<% end %>
